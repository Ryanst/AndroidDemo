<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textShorter" parent="@android:style/TextAppearance">
        <item name="android:textColor">#808080</item>
    </style>

    <style name="textError" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FF0000</item>
    </style>

    <style name="textOk" parent="@android:style/TextAppearance">
        <item name="android:textColor">#00aa54</item>
    </style>

    <declare-styleable name="CombinationViewStyleable">
        <attr name="btnColor" format="color"></attr>
        <attr name="size" format="dimension"></attr>
        <attr name="ivBg" format="reference"></attr>
        <attr name="text" format="string"></attr>
    </declare-styleable>

    <declare-styleable name="wheel_view">
        <attr name="text_size" format="dimension"></attr>
        <attr name="text_padding" format="dimension"></attr>
        <attr name="select_color" format="color"></attr>
        <attr name="un_select_color" format="color"></attr>
        <attr name="offset" format="integer"></attr>
        <attr name="fling_speed" format="integer"></attr>
        <attr name="default_index" format="integer"></attr>
    </declare-styleable>

    <declare-styleable name="tool_bar">
        <attr name="title_text" format="string" />
        <attr name="subtitle_text" format="string" />
        <attr name="back" format="boolean" />
    </declare-styleable>
</resources>