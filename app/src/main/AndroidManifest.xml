        <activity
            android:name=".activity.NavigationDrawerActivityBase"
            android:label="@string/title_activity_navigation_drawer"
            android:theme="@style/AppTheme"></activity>

        <activity
            android:name=".activity.NetChangeBroadcastReceiverActivityBase"
            android:label="@string/title_activity_navigation_drawer"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".activity.ScheduleTaskActivityBase"
            android:label="@string/title_activity_navigation_drawer"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".activity.TextViewLetterSpacingActivityBase"
            android:label="@string/title_activity_navigation_drawer"
            android:theme="@style/AppTheme"></activity>

        <activity
            android:name=".activity.CustomViewActivityBase"
