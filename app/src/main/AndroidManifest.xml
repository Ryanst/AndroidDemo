            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".activity.HandlerThreadActivityBase"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".activity.TabLayoutViewPagerActivityBase"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".activity.PhotoCameraActivityBase"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".activity.TabFragmentActivityBase"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".activity.SpinnerActivityBase"
